{% extends 'base.html.twig' %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">


        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Using Tesseract
            </li>
        </ol>



    </section>

    <!-- Main content -->
    <section class="content">


    <h1>Dataentity</h1>

    <table border="">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dataEntity.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ dataEntity.file }}</td>
            </tr>

        </tbody>
    </table>


                <h2>File Metadata : </h2>
                <table border="">
                    {% for metadatadoc in metadatadoc %}
                        <tr>
                            <th>Content</th>
                            <td>{{ metadatadoc.content }}</td>
                        </tr>
                        <tr>
                            <th>File Type</th>
                            <td>{{ metadatadoc.contentType }}</td>
                        </tr>
                        <tr>
                            <th>File Size</th>
                            <td>{{ metadatadoc.fileSize }}</td>
                        </tr>

                    {% endfor %}
                </table>


    <ul>
        <li>
            <a href="{{ path('dataentity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dataentity_edit', { 'id': dataEntity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    </section>
    <!-- right col -->
</div>
    <!-- /.row (main row) -->
{% endblock %}
